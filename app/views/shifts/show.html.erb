<div class="row">
	<div class="span6">
		<h3>Shift Details</h3>
		<%= render :partial => "shift_details" %>
	</div>

	<div class="span6">
		<h3>Jobs Performed</h3>
			<table class="table table-striped">
			  <thead>
			    <tr>
			      <th>Name</th>
						<th>Description</th>
			      <th>&nbsp;</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @shift.jobs.each do |job| %>
			      <tr>
			        <td><%= link_to job.name, job_path(job) %></td>
							<td><%= job.description %></td>
			        <td>
								<%= link_to raw("<i class='icon-file'></i> Details"), job_path(@shift.jobs), :class => 'btn btn-mini' %>
			        </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
	</div>

</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-th-list'></i> Display All Shifts"), shifts_path, :class => 'btn'  %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-pencil'></i> Edit Shift"), edit_shift_path(@shift), :class => 'btn' %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-trash icon-white'></i> Delete Shift"), shift_path(@shift), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

