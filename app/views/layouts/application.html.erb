<!DOCTYPE html>
<html>
<head>
  <title>Amazing &amp; Marvelous Creamery</title>
  <%= stylesheet_link_tag "application", "bootstrap.min", "bootstrap-responsive.min" %>
  <%= javascript_include_tag "jquery", "jquery-ui", "jquery_ujs", "bootstrap.min", 'nested_form' %>
  <%# stylesheet_link_tag    "application", :media => "all" %>
  <%# javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- TITLE BAR -->
	<%= link_to(image_tag('logo_2.png'), home_path) %>
	<!-- NAV BAR -->
	<div class="topbar">
	  <div class="topbar-inner">
	    <div class="container">
	      <%= render :partial => 'partials/navigation' %>
	    </div>
	  </div>
	</div>
	
	<!-- MAIN CONTENT -->
	<div class="container">
		<!-- <div id="login">
      <%# if logged_in? %>
        <%#= link_to 'Logout', logout_path %>
        <br>[<#%= current_user.employee.proper_name %> : <#%= current_user.employee.role %>]
      <%# else %>
        <%#= link_to 'Login', login_path %>
      <%# end %>
		</div> -->
		<!-- flash messages -->
		<% flash.each do |name, msg| %>
			<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
				<a class="close" data-dismiss="alert">&times;</a>
				<%= msg %>
			</div>
    <% end %>
		<div class="row">
			<!-- main content placed here -->
			<div class="span12">
				<%= yield %>
			</div>
		</div>
	</div>
	
	<!-- FOOTER -->
	<footer class="footer">
    <div class="container">
			<%= render :partial => "partials/footer" %>
    </div>
  </footer>
</body>
</html>
