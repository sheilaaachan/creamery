<table class="table table-striped">
  <thead>
    <tr>
      <th>Store</th>
			<th>Date</th>
			<th class="centered">Start Time</th>
      <th>&nbsp</th>
    </tr>
  </thead>
  <tbody>
    <% unless @upcoming_shifts.nil? %>
      <% @upcoming_shifts.each do |shift| %>
        <tr>
          <td><%= link_to shift.assignment.store.name, store_path(shift.assignment.store) %></td>
  				<td><%= shift.date.strftime("%m/%d/%y") %></td>
  				<td><%= shift.start_time.strftime("%l:%M %p") %></td>
          <td>
            <%= link_to raw("<i class='icon-file'></i> Details"), shift_path(shift), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @assignments, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>