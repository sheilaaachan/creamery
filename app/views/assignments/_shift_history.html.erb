<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
			<th>Start Time</th>
			<th>End Time</th>
      <th>&nbsp</th>
    </tr>
  </thead>
  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.date.strftime("%m/%d/%y") %></td>
				<td><%= shift.start_time.strftime("%l:%M %p") %></td>
				<td><%= shift.end_time.strftime("%l:%M %p") %></td>
        <td>
          <%= link_to raw("<i class='icon-file'></i> Details"), shift_path(shift), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= will_paginate @shifts, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
