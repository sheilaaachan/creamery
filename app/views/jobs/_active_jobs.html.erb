<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
			<th>Description</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.name, job_path(job) %></td>
				<td><%= job.description %></td>
        <td>
					<%= link_to raw("<i class='icon-file'></i> Details"), job_path(job), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @jobs, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
