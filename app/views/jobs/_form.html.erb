<%= simple_form_for @job, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Job</legend>

		<%= f.input :name, :include_blank => true %>
		<%= f.input :description, :include_blank => true %>
		<%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', jobs_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
